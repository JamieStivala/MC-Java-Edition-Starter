{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "out",
        "baseUrl": ".",
        "allowJs": true,
        "resolveJsonModule": true,
        "paths": {
            "*": [
                ".node_modules/*",
                ".src/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
